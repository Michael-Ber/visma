{
    "svguse": {
    "scope": "html",
    "prefix": "g-use",
    "body": [
        "<svg class=\"\">",
        "  <use xlink:href=\"img/sprite.svg#$2\"></use>",
        "</svg>"
    ],
    "description": "Snippet for use svg sprites"
    },
    "navigation": {
        "scope": "html",
        "prefix": "g-nav",
        "body": [
          "<nav class=\"nav\" title=\"$1\">",
          "  <ul class=\"nav__list\">",
          "    <li class=\"nav__item\"><a href=\"#\" class=\"nav__link\"></a></li>",
          "    <li class=\"nav__item\"><a href=\"#\" class=\"nav__link\"></a></li>",
          "    <li class=\"nav__item\"><a href=\"#\" class=\"nav__link\"></a></li>",
          "  </ul>",
          "</nav>"
        ],
        "description": "Snippet for navigation"
      },
      "burger": {
        "scope": "html",
        "prefix": "g-burger",
        "body": [
          "<div class=\"header-burger\" title=\"$1\">",
          "   <button class=\"header-burger__btn\" aria-label=\"Открыть меню\" aria-expanded=\"false\">",
          "     <span class=\"header-burger__line\"></span>",
          "   </button>",
          "   <div class=\"header-burger__menu\" aria-hidden=\"true\">",
          "     <button class=\"header-burger__close\">&#10006;</button>", 
          "     <nav class=\"header-burger__nav\" title=\"$1\">", 
          "       <ul class=\"header-burger__list\">",
          "         <li class=\"header-burger__item\"><a href=\"#\" class=\"header-burger__link\"></a></li>",
          "         <li class=\"header-burger__item\"><a href=\"#\" class=\"header-burger__link\"></a></li>",
          "         <li class=\"header-burger__item\"><a href=\"#\" class=\"header-burger__link\"></a></li>",
          "       </ul>",
          "     </nav>",
          "    </div>",
          " </div>"
        ],
        "description": "Snippet for burger"
      },
      "basicform": {
        "prefix": "g-form",
        "body": [
          "<form action=\"#\" class=\"form\">",
          "  <label class=\"form__label\">",
          "    <input type=\"text\" name=\"Имя\" class=\"input-reset form__input\" placeholder=\"Имя\">",
          "  </label>",
          "  <button class=\"btn-reset form__btn\">Отправить</button>",
          "</form>"
        ],
        "description": "Snippet for basic form"
      },
      "basicswiper": {
        "prefix": "g-swiper",
        "body": [
          "<div class=\"swiper $1\">",
          "  <div class=\"swiper-wrapper\">",
          "     <div class=\"swiper-slide\">",
          "     </div>",
          "  </div>",
          "</div>"
        ],
        "description": "Snippet for basic swiper structure"
      },
      "picture": {
        "prefix": "g-picture",
        "body": [
          "<picture>",
          "  <source srcset=\"$1.webp\" type=\"image/webp\">",
          "  <img loading=\"lazy\" src=\"$1.$2\" class=\"image\" width=\"$4\" height=\"$5\" alt=\"$3\">",
          "</picture>"
        ],
        "description": "Snippet for basic logo structure"
      },
      "svgimg": {
        "scope": "html",
        "prefix": "g-svgimg",
        "body": [
          "<img loading=\"lazy\" src=\"$1.$2\" class=\"image\" width=\"$4\" height=\"$5\" alt=\"$3\">"
        ],
        "description": "Snippet for simple html svg images"
      }

}